<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar navbar-light bg-faded">
        <div class="row">
          <div class="col-sm-4 col-12">
            <%= link_to "Flixter", root_path, class: "navbar-brand" %>
          </div>
          <div class="col-sm-4 col-12 text-center">
            <%= link_to 'See All Courses', courses_path, class: 'nav-link' %>
          </div>
          <div class="col-sm-4 col-12 text-right">
            <% if user_signed_in? %>
              <%= link_to 'Sign out', destroy_user_session_path, class: 'nav-link', method: :delete %>
            <% else %>
              <%= link_to 'Sign In/Up', new_user_session_path, class: 'nav-link' %>
            <% end %>
          </div>
        </div>
      </nav>

      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <%= yield %>
    </div>

    <div id="footer">
      <div class="container">
        <b>Teachers</b>
        <br />
        <%= link_to 'Teach a Course', new_instructor_course_path %>
      </div>
    </div>
  </body>
</html>
